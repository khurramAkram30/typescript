{
    "compilerOptions": {
      "target": "ES5",
      "module": "CommonJS",
      "outDir": "Javascript",
      "rootDir": "./src",                        /* Redirect output structure to the directory. */
      "esModuleInterop": false,  
      "sourceMap": true,
      "skipLibCheck": true,                     /* Skip type checking of declaration files. */
      "forceConsistentCasingInFileNames": true,
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }